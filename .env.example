# Server Configuration
WEBSOCKET_PORT=8012
LOG_LEVEL=INFO

# Chrome Profile Path (update with your actual path)
# Windows: C:\Users\<username>\AppData\Local\Google\Chrome\User Data\Default
# Mac: ~/Library/Application Support/Google/Chrome/Default
# Linux: ~/.config/google-chrome/Default
CHROME_PROFILE_PATH=/path/to/chrome/profile

# Security Keys (generate new ones for production)
JWT_SECRET_KEY=your-secret-key-here-change-this
MCP_ENCRYPTION_KEY=your-encryption-key-here-change-this
ENCRYPTION_KEY=your-encryption-key-here-change-this

# AI Integration (optional)
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-opus

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# ElasticSearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=chrome_bookmarks
RAG_ENDPOINT=http://localhost:9200

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
CACHE_TTL=3600
BROKEN_LINK_TIMEOUT=5

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8012
SECRET_KEY=your-general-secret-key-here

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=3600
JWT_EXPIRATION_HOURS=24

# Security Configuration
ALLOWED_ORIGINS=chrome-extension://*,http://localhost:*